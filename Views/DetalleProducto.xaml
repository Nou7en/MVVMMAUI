<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMProy.Views.DetalleProducto"
             Title="DetalleProducto"
             xmlns:model="clr-namespace:MVVMProy.ViewModels"
             x:DataType="model:DetalleProductoViewModel">
    <VerticalStackLayout>
        <Image Source="dotnet_bot.png"
           HorizontalOptions="Center"
           HeightRequest="200"/>
        <Label x:Name="Nombre"
           Text="{Binding Nombre}"
           FontSize="32"
           HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Cantidad: "
                FontSize="18"/>
            <Label x:Name="Cantidad"
                Text="{Binding Cantidad}"
                FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="DecripciÃ³n: "
                FontSize="18"/>
            <Label x:Name="Descripcion"
                Text="{Binding Descripcion}"
                FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" x:DataType="model:DetalleProductoViewModel">
            <Button Text="Eliminar"
                    HorizontalOptions="FillAndExpand"
                    Margin="5"
                    BackgroundColor="Red"
                    FontSize="20"
                    Command="{Binding EliminarProductoCommand}">

            </Button>
            <Button Text="Editar"
                    HorizontalOptions="FillAndExpand"
                    Margin="5"
                    BackgroundColor="Orange"
                    TextColor="Black"
                    FontSize="20"
                    Command="{Binding EditarProductoCommand}">

            </Button>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>